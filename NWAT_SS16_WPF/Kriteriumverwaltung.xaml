<Window x:Class="NWAT_SS16.Kriteriumverwaltung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kriteriumverwaltung" Height="397.5" Width="891.5" Icon="Resources/Laundry_12-512.png" Closing="KriteriumverwaltungClosing">
    <Grid>
        <ListBox x:Name="listeKriterium" HorizontalAlignment="Left" Height="170" Margin="34,74,0,0" VerticalAlignment="Top" Width="349" SelectionChanged="item_selected"/>
        <Button x:Name="kriterium_anlegen" Content="anlegen" HorizontalAlignment="Left" Margin="37,289,0,0" VerticalAlignment="Top" Width="74" Click="anlegen_Click"/>
        <Button x:Name="kriterium_loeschen" Content="loeschen" HorizontalAlignment="Left" Margin="648,287,0,0" VerticalAlignment="Top" Width="74" Click="kriterium_loeschen_Click"/>
        <Button x:Name="kriteriumAendern" Content="aendern" HorizontalAlignment="Left" Margin="738,287,0,0" VerticalAlignment="Top" Width="74" Click="kriteriumAendern_Click"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="404,82,0,0" VerticalAlignment="Top"/>
        <Label Content="Bezeichnung&#xD;&#xA;" HorizontalAlignment="Left" Margin="405,118,0,0" VerticalAlignment="Top" Height="28" RenderTransformOrigin="-0.397,0.571"/>
        <TextBox x:Name="details_ID" HorizontalAlignment="Left" Height="23" Margin="515,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="283" IsEnabled="False"/>
        <TextBox x:Name="details_Bezeichnung" HorizontalAlignment="Left" Height="23" Margin="515,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="283" SpellCheck.IsEnabled="True"/>

    </Grid>
</Window>
