<Window x:Class="NWAT_SS16.Projekt_anlegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Projekt_anlegen" Height="410.448" Width="773.135" BorderBrush="Black" Icon="Resources/Laundry_12-512.png">
    <Grid>
        <Label Content="ProjektID" HorizontalAlignment="Left" Margin="57,100,0,0" VerticalAlignment="Top" Height="47" FontWeight="Bold" FontSize="20"/>
        <Label Content="Bezeichnung" HorizontalAlignment="Left" Margin="57,192,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
        <TextBox x:Name="textProjektID" HorizontalAlignment="Left" Height="31" Margin="308,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="366" FontSize="20" IsEnabled="False"/>
        <TextBox x:Name="textBezeichnung" HorizontalAlignment="Left" Height="37" Margin="308,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="366" FontSize="20" SpellCheck.IsEnabled="True"/>
        <Button Content="abbrechen" HorizontalAlignment="Left" Margin="181,295,0,0" VerticalAlignment="Top" Width="142" FontSize="18" Height="51" Background="#FFDE1010" Click="abbrechen_Click"/>
        <Button Content="speichern" HorizontalAlignment="Left" Margin="456,295,0,0" VerticalAlignment="Top" Width="145" FontSize="18" Height="51" BorderBrush="#FF2BE20F" Click="speichern_Click" Foreground="Black" Background="#FF2EC516"/>

    </Grid>
</Window>
